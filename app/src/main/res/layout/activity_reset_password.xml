<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackBlue"
    android:orientation="vertical">


    <Button
        android:id="@+id/reset_btn"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_reset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="@drawable/rounded_login_button"
        android:text="Reset password"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/enter_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Enter Username"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/button_text_color" />

    <EditText
        android:id="@+id/username_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/enter_username"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        android:background="@drawable/rounded_login_edit_text"
        android:ems="10"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:singleLine="false"
        android:textColorHint="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/enter_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/enter_username"
        android:layout_alignStart="@+id/enter_username"
        android:layout_below="@+id/username_reset"
        android:text="Enter current email "
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/button_text_color" />

    <EditText
        android:id="@+id/email_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/enter_email"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_login_edit_text"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:singleLine="false"
        android:textColorHint="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/enter_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/enter_email"
        android:layout_alignStart="@+id/enter_email"
        android:layout_below="@+id/email_reset"
        android:text="Enter new password"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/button_text_color" />

    <EditText
        android:id="@+id/password_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/enter_password"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_login_edit_text"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:singleLine="false"
        android:textColorHint="@color/colorPrimaryDark" />

</RelativeLayout>